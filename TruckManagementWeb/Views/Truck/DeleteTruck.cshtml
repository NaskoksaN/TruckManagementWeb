@model TruckViewModel
@{
    ViewBag.Title = "Delete truck";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="DeleteConfirmed" method="post">
<div class="row justify-content-center">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.TruckPlate</h3>
                <p class="mb-0"><strong>Truck brand </strong> @Model.TruckBrand</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this truck?"</p>
            </div>
            <div class="card-footer">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="TruckDetails" asp-controller="Truck" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
</form>