@model SoldOrderFormModel

@{
    ViewData["Title"] = "Create Selling Order and send to client e-mail";
}

<h5>Create Sold Order</h5>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="ClientCompanyVat">Client Company Vat</label>
                <input asp-for="ClientCompanyVat" class="form-control" />
                <span asp-validation-for="ClientCompanyVat" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="ClientEmail">Client Email</label>
                <input asp-for="ClientEmail" class="form-control" />
                <span asp-validation-for="ClientEmail" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="LoadingCompany">Loading Company</label>
                <input asp-for="LoadingCompany" class="form-control" />
                <span asp-validation-for="LoadingCompany" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="DeliveryCompany">Delivery Company</label>
                <input asp-for="DeliveryCompany" class="form-control" />
                <span asp-validation-for="DeliveryCompany" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="LoadingStreet">Loading Street</label>
                <input asp-for="LoadingStreet" class="form-control" />
                <span asp-validation-for="LoadingStreet" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="DeliveryStreet">Delivery Street</label>
                <input asp-for="DeliveryStreet" class="form-control" />
                <span asp-validation-for="DeliveryStreet" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="LoadingTown">Loading Town</label>
                <input asp-for="LoadingTown" class="form-control" />
                <span asp-validation-for="LoadingTown" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="DeliveryTown">Delivery Town</label>
                <input asp-for="DeliveryTown" class="form-control" />
                <span asp-validation-for="DeliveryTown" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="LoadingMeter">Loading Meter</label>
                <input asp-for="LoadingMeter" class="form-control" />
                <span asp-validation-for="LoadingMeter" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Weight">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Price">Order price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="LoadingReference">Loading Reference</label>
                <input asp-for="LoadingReference" class="form-control" />
                <span asp-validation-for="LoadingReference" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="DeliveryReference">Delivery Reference</label>
                <input asp-for="DeliveryReference" class="form-control" />
                <span asp-validation-for="DeliveryReference" class="text-danger"></span>
            </div>
        </div>
    </div>
   
    <button type="submit" class="btn btn-primary">Send order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

