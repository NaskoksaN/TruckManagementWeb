<div class="row">
    <div class="col">
        <div class="form-group">
            <label asp-for="LoadingStreet">Loading Street</label>
            <input asp-for="LoadingStreet" class="form-control" readonly />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label asp-for="DeliveryStreet">Delivery Street</label>
            <input asp-for="DeliveryStreet" class="form-control" readonly />
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="form-group">
