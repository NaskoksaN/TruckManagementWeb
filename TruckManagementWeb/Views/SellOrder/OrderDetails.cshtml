            <input asp-for="LoadingTown" class="form-control" readonly />
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label asp-for="DeliveryTown">Delivery Town</label>
            <input asp-for="DeliveryTown" class="form-control" readonly />
        </div>
    </div>
