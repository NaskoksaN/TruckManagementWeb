<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary">Add Next</a>
    </div>
    <div class="col">
        <a href="~/Home/HomeUserIndex" class="btn btn-primary">Back to User Home Page</a>
    </div>
</div>

