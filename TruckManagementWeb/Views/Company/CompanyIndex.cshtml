@model X.PagedList.IPagedList<CompanyIndexViewModel>
@{
    ViewData["Title"] = "Companies list";
}

<table class="table">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>VAT</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.Vat</td>
                <td>@company.Country</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Any())
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="?page=@Model.PageNumber - 1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="?page=@Model.PageNumber + 1" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <h4>No company. Need to Add first company</h4>
}

