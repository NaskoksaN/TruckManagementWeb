@model CompanyFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-4 col-lg-4 offset-xl-3 col-xl-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Company name ..">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyVat"></label>
                <input asp-for="CompanyVat" class="form-control" placeholder="Company Vat ..">
                <span asp-validation-for="CompanyVat" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" placeholder="Company country ..">
                <span asp-validation-for="Country" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town"></label>
                <input asp-for="Town" class="form-control" placeholder="Company town ..">
                <span asp-validation-for="Town" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Company address ..">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
