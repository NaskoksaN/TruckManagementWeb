@model TripFormModel

@{
    ViewBag.Title = "Enter trip details.";
}

<h3 class="text-center">@ViewBag.Title</h3>
<hr />

<div class="container">
    <h2>Enter Trip Details</h2>
    <form asp-action="CreateTrip" method="post">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TruckPlate" class="control-label"></label>
                    <input asp-for="TruckPlate" class="form-control" />
                    <span asp-validation-for="TruckPlate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mb-4"></div> 
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TripPrice" class="control-label"></label>
                    <input asp-for="TripPrice" class="form-control" />
                    <span asp-validation-for="TripPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TripKm" class="control-label"></label>
                    <input asp-for="TripKm" class="form-control" />
                    <span asp-validation-for="TripKm" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mb-4"></div> 
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control datepicker" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control datepicker" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mb-4"></div> 
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>




