@model IEnumerable<TripViewModel>

@{
    ViewBag.Title = "Trips";
}

<h6 class="text-center">@ViewBag.Title</h6>
<hr />

@if (Model.Any())
{
    <div id="tripsTableContainer">
        <div class="container table-container">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Loading Date</th>
                            <th>Truck Plate</th>
                            <th>Price</th>
                            <th>Distance (km)</th>
                            <th>Price per Kilometer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <partial name="_TripRowsPartial" model="@Model" />
                </table>
            </div>
        </div>
    </div>
}
else
{
    <h4>No trips added</h4>
}

<style>
    .card {
        margin-top: 10px;
    }
</style>

<script>
    function toggleOrders(tripId) {
        var ordersRow = document.getElementById('orders-' + tripId);
        if (ordersRow.style.display === 'none') {
            ordersRow.style.display = 'table-row';
        } else {
            ordersRow.style.display = 'none';
        }
    }
</script>

